<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backlogin"
    tools:context=".fragment.AboutAppFragment">


    <ImageView
        android:id="@+id/appIcon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/splashscreen"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book Hub"
        android:textSize="36sp"
        android:textStyle="bold|italic"
        android:layout_below="@id/appIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textColor="#4CAF50"/>

    <TextView
        android:id="@+id/appDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your go-to app for discovering and exploring a vast collection of books. Find, save, and enjoy your reading journey with Book Hub."
        android:layout_below="@id/appName"
        android:layout_margin="20dp"
        android:textColor="#2196F3"
        android:textSize="25sp"
        android:textStyle="normal|italic"/>

    <TextView
        android:id="@+id/versionNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version 1.0.0"
        android:layout_below="@id/appDescription"
        android:layout_marginTop="16dp"
        android:layout_centerInParent="true"
        android:textColor="#FF9800"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/copyrightText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â© 2023 Book Hub. All rights reserved."
        android:layout_below="@id/versionNumber"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:textColor="#9C27B0"
        android:padding="25dp"
        android:textSize="20sp"
        android:textStyle="normal|bold"/>
    </RelativeLayout>

